<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Android.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:radius="50dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    android:theme="@style/Theme.Android.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-10dp"
        android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="0dp"
        >
            <TextView
                android:id="@+id/summarywidget_title"
                style="@style/Widget.Android.AppWidget.InnerView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/background_color"
                android:padding="1sp"
                android:paddingLeft="0sp"
                android:includeFontPadding="false"
                android:text="សាច់ប្រាក់ខែ"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="0dp"
        >
            <TextView
                android:id="@+id/income_title"
                style="@style/Widget.Android.AppWidget.InnerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background_color"
                android:padding="0sp"
                android:includeFontPadding="false"
                android:text="ចំណូល"
                android:textColor="@color/gray_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/income_text"
                style="@style/Widget.Android.AppWidget.InnerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/background_color"
                android:gravity="right"
                android:padding="0sp"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                android:text="៛10,000,000.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_weight="0"
        >
            <TextView
                android:id="@+id/expense_title"
                style="@style/Widget.Android.AppWidget.InnerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@color/background_color"
                android:padding="0sp"
                android:textColor="@color/gray_color"
                android:text="ចំណាយ"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/expense_text"
                style="@style/Widget.Android.AppWidget.InnerView"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background_color"
                android:gravity="right"
                android:padding="0sp"
                android:textColor="@color/red_color"
                android:textSize="14sp"
                android:text="-៛100,000.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_weight="0"
        >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@color/gray_color"
                android:text="" />

            <LinearLayout
                android:id="@+id/summarywidget_total_horizontal_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:layout_weight="0"
            >
                <TextView
                    android:id="@+id/summarywidget_total_title"
                    style="@style/Widget.Android.AppWidget.InnerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/background_color"
                    android:padding="0sp"
                    android:textColor="@color/white"
                    android:text="សរុប"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/summarywidget_total_amount_horizontal"
                    style="@style/Widget.Android.AppWidget.InnerView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/background_color"
                    android:gravity="right"
                    android:padding="0sp"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="៛9,990,000.00" />
            </LinearLayout>
            <TextView
                android:id="@+id/summarywidget_total_amount_vertical"
                style="@style/Widget.Android.AppWidget.InnerView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:background="@color/background_color"
                android:gravity="left"
                android:padding="0sp"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>